<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the button with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set your desired background color (white in this case) -->
            <corners android:radius="10dp" /> <!-- Set the radius for rounded corners -->
        </shape>
    </item>
    <!-- Thin black outline around the button -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
            android:color="#000000" /> <!-- Set the color of the outline (black in this case) -->
            <corners android:radius="10dp" /> <!-- Match the radius for rounded corners -->
        </shape>
    </item>
</layer-list>
